<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/imageListFragment">

    <fragment
        android:id="@+id/imageListFragment"
        android:name="com.hasanshukurov.imageswithretrofitapi.presentation.images.ImageListFragment"
        android:label="Images"
        tools:layout="@layout/fragment_images">
        
        <action
            android:id="@+id/action_imageListFragment_to_imageDetailFragment"
            app:destination="@id/imageDetailFragment" />
    </fragment>
    
    <fragment
        android:id="@+id/imageDetailFragment"
        android:name="com.hasanshukurov.imageswithretrofitapi.presentation.detail.ImageDetailFragment"
        android:label="Image Detail"
        tools:layout="@layout/fragment_image_detail">
        
        <argument
            android:name="imageId"
            app:argType="string" />
    </fragment>
</navigation>
